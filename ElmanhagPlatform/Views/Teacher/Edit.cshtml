@using ElmanhagPlatform.ViewModels.TeacherVM;
@model EditTeacherVM

@{
    ViewData["Title"] = "Login Page";
}
<header>
    <style>
        .form-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .form-group {
            flex: 1 1 45%;
            min-width: 225px;
        }

        media (max-width: 768px) {
            .form-container {
                flex-direction: column;
            }
        }

        .hire-info {
            display: flex;
            justify-content: center;
            align-items: center;
            height: auto;
            padding: 20px;
            margin: 0;
            box-sizing: border-box;
        }

        .container {
            margin: 0 auto;
            padding: 0;
            overflow: hidden;
        }

        .hire-info form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            /* color: #ff9933; */
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-h {
            /* background-color: #ff9933; */
            color: #333;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

            .btn-h:hover {
                /* background-color: #ff9933; */
            }
    </style>
</header>

<div id="contact" class="hire">
    <div class="container">
        <div class="hire-details">
            <h1 class="text-primary">تعديل البيانات</h1>
            <div class="hire-info">
                <form id="account" method="post" asp-action="Edit" asp-controller="Teacher" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-container">
                        <div class="form-group">
                            <input asp-for="FullName" autocomplete="on" aria-required="true" type="text" class="form-control" placeholder="اسم المدرس" onfocus="this.placeholder = ''" onblur="this.placeholder ='اسم المدرس'">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="UserName" autocomplete="tel" aria-required="true" type="tel" class="form-control" placeholder="اسم المستخدم" onfocus="this.placeholder = ''" onblur="this.placeholder ='اسم المستخدم'">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" autocomplete="tel" aria-required="true" type="tel" class="form-control" placeholder="رقم الهاتف" onfocus="this.placeholder = ''" onblur="this.placeholder ='رقم الهاتف'">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" autocomplete="on" aria-required="true" type="email" class="form-control" placeholder="البريد الالكتروني" onfocus="this.placeholder = ''" onblur="this.placeholder ='البريد الالكتروني'">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="MaterialName" autocomplete="on" aria-required="true" type="text" class="form-control" placeholder="اسم المادة" onfocus="this.placeholder = ''" onblur="this.placeholder ='اسم المادة'">
                            <span asp-validation-for="MaterialName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>صورة شخصية<span class="tx-danger"></span></label>
                            <input asp-for="Image" type="file" class="form-control-image" accept="image/*" aria-required="true" placeholder="صورة شخصية" onfocus="this.placeholder = ''" onblur="this.placeholder ='صورة شخصية'">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" type="password" autocomplete="current-password" aria-required="true" class="form-control" placeholder="الرقم السري" onfocus="this.placeholder = ''" onblur="this.placeholder ='الرقم السري'">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" type="password" autocomplete="current-password" aria-required="true" class="form-control" placeholder="تاكيد الرقم السري" onfocus="this.placeholder = ''" onblur="this.placeholder ='تاكيد الرقم السري'">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>
                                <input asp-for="Preparatory" type="checkbox" class="form-check-input" />
                                مدرس اعدادي
                            </label>
                            <span asp-validation-for="Preparatory" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>
                                <input asp-for="Secondry" type="checkbox" class="form-check-input" />
                                مدرس ثانوي
                            </label>
                            <span asp-validation-for="Secondry" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="descreption" autocomplete="on" aria-required="true" type="text" class="form-control" placeholder="وصف المدرس" onfocus="this.placeholder = ''" onblur="this.placeholder ='وصف المدرس'"></textarea>
                            <span asp-validation-for="descreption" class="text-danger"></span>
                        </div>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-layout-footer mg-t-30 text-center">
                        <button type="submit" class="btn-1 btn-h btn btn-primary" onclick="return validateSelection()">
                            <i class="fas fa-save"></i> حفظ
                        </button>
                        <a asp-controller="Teacher" asp-action="Index" class="btn-1 btn-h btn btn-primary">
                            <i class="fas fa-arrow-left"></i> رجوع
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function validateSelection() {
            var preparatoryChecked = document.getElementById('Preparatory').checked;
            var secondryChecked = document.getElementById('Secondry').checked;

            if (!preparatoryChecked && !secondryChecked) {
                alert("يجب أن تختار على الأقل نوعًا واحدًا من التدريس (إعدادي أو ثانوي).");
                return false;
            }

            return true;
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}