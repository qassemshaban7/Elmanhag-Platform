@using ElmanhagPlatform.ViewModels
@model EditAdminVM

@{
    ViewData["Title"] = "Login Page";
}
<header>
    <style>
        .form-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .form-group {
            flex: 1 1 45%;
            min-width: 225px;
        }

        media (max-width: 768px) {
            .form-container{
                flex-direction: column;
            }
        }

        .hire-info {
            display: flex;
            justify-content: center;
            align-items: center;
            height: auto;
            padding: 20px;
            margin: 0;
            box-sizing: border-box;
        }

        .container {
            margin: 0 auto;
            padding: 0;
            overflow: hidden;
        }

        .hire-info form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            /* color: #ff9933; */
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-h {
            /* background-color: #ff9933; */
            color: #333;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

            .btn-h:hover {
                /* background-color: #ff9933; */
            }
    </style>
</header>

<div id="contact" class="hire">
    <div class="container">
        <div class="hire-details">
            <h2 class="text-primary">تعديل الحساب</h2>
            <div class="hire-info">
                <form id="account" method="post" asp-action="EditMyAccount" asp-controller="User" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-container">
                        <div class="form-group">
                            <input asp-for="FullName" autocomplete="on" aria-required="true" type="text" class="form-control" placeholder="الاسم رباعي" onfocus="this.placeholder = ''" onblur="this.placeholder ='الاسم رباعي'">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="UserName" autocomplete="tel" aria-required="true" type="text" class="form-control" placeholder="رقم الهاتف" onfocus="this.placeholder = ''" onblur="this.placeholder ='رقم الهاتف'">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" autocomplete="on" aria-required="true" type="email" class="form-control" placeholder="البريد الالكتروني" onfocus="this.placeholder = ''" onblur="this.placeholder ='البريد الالكتروني'">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Url" autocomplete="tel" aria-required="true" type="text" class="form-control" placeholder="معرف فيديو الاشتراك" onfocus="this.placeholder = ''" onblur="this.placeholder ='معرف فيديو الاشتراك'">
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
@*                         @if (Model.Id == "ecc07b18-f55e-4f6b-95bd-0e84f556135f")
                        {
                            <div class="form-group">
                                <input asp-for="AppsPassword" type="text" autocomplete="current-password" aria-required="true" class="form-control" placeholder="كلمة مرور التطبيقات" onfocus="this.placeholder = ''" onblur="this.placeholder ='كلمة مرور التطبيقات'">
                                <span asp-validation-for="AppsPassword" class="text-danger"></span>
                            </div>
                        } *@
                        <div class="form-group">
                            <input asp-for="Password" type="password" autocomplete="current-password" aria-required="true" class="form-control" placeholder="الرقم السري" onfocus="this.placeholder = ''" onblur="this.placeholder ='الرقم السري'">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" type="password" autocomplete="current-password" aria-required="true" class="form-control" placeholder="تاكيد الرقم السري" onfocus="this.placeholder = ''" onblur="this.placeholder ='تاكيد الرقم السري'">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="form-layout-footer mg-t-30 text-center">
                        <button type="submit" class="btn-1 btn-h btn btn-primary">
                            <i class="fas fa-save"></i> حفظ
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn-1 btn-h btn btn-primary">
                            <i class="fas fa-arrow-left"></i> رجوع
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}